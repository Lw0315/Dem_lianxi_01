<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.asus.dem_lianxi_01.LoginActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dip">
        <ImageView
            android:layout_width="50dip"
            android:layout_height="30dip"
            android:id="@+id/cha"
            android:src="@drawable/cha"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:layout_marginTop="5dip"
        android:text="登录你的头条，精彩永不丢失"
        android:gravity="center"
        android:textSize="21sp"
        android:textColor="#505050"
        />
     <EditText
         android:layout_width="match_parent"
         android:layout_height="45dip"
         android:layout_margin="10dip"
         android:background="@drawable/kongxin"
         android:text="                                                   |  发送验证码"
         />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:layout_margin="10dip"
        android:background="@drawable/kongxin"
       android:hint="      请输入验证码"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dip"
        android:text="未注册手机验证后自动登录"
        android:gravity="center"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:layout_margin="10dip"
        android:background="@drawable/jinru"
        android:text="进入头条"
        android:textSize="21sp"
        android:textColor="#ffffff"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dip"
        android:orientation="horizontal"
        >
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dip"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我已阅读并同意“用户协议和隐私条款”"
            android:textColor="#505050"
            android:layout_marginLeft="5dip"
            />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:layout_marginTop="5dip"
        android:text="账号密码登录"
        android:textColor="#6699cc"
        android:gravity="center"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:layout_marginTop="30dip"
        android:text="—————— 更多登录方式 ——————"
        android:textColor="#cfcfcf"
        android:gravity="center"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >
        <RelativeLayout
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="45dip">
            <ImageView
                android:layout_width="45dip"
                android:layout_height="45dip"
                android:src="@drawable/x"
                android:layout_centerInParent="true"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="45dip">
            <ImageView
                android:layout_width="45dip"
                android:layout_height="45dip"
                android:src="@drawable/q"
                android:layout_centerInParent="true"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="45dip">
            <ImageView
                android:layout_width="45dip"
                android:layout_height="45dip"
                android:src="@drawable/b"
                android:layout_centerInParent="true"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="45dip">
            <ImageView
                android:layout_width="45dip"
                android:layout_height="45dip"
                android:src="@drawable/y"
                android:layout_centerInParent="true"
                android:padding="4dip"
                android:background="@drawable/kongyuan"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="45dip">
            <ImageView
                android:layout_width="45dip"
                android:layout_height="45dip"
                android:src="@drawable/w"
                android:layout_centerInParent="true"
                android:padding="4dip"
                android:background="@drawable/kongyuan"
                />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
